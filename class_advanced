from operator import truediv, mul, add, sub  # the needed functions are imported from module "operator"

# then the necessary operators should are listed
class Advanced:
    def __init__ (self,isdigit):
        self.isdigit = isdigit
    
    
    operators = {
    '+': add,
    '-': sub,
    '*': mul,
    '/': truediv
    }


    def calculate(self,s):
        self.s = s
        if s.isdigit():
            return float(s)
        for c in operators.keys():
            left, operator, right = s.partition(c)
        if operator in operators:
            return operators[operator](calculate(left), calculate(right))
